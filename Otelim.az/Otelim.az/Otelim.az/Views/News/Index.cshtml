@using Otelim.az.Models;
@using Otelim.az.VIewModel;
@model VModel
@{
    ViewBag.Title = "Index";
}

<div style="height:1000px" class="none"></div>
<div class="container-fluid news px-0">
        <img width="100%" height="100%" mobile-src="/Public/images/news/mobile design (3).jpg"
                                               src="/Public/images/news/design (3).jpg"/>
        <div class="newslayout position-absolute"></div>
        <div class="position-absolute paper row p-3">
            <div class="col-md-4 col-xs-12 px-0 first">
                @foreach (var item in Model.news)
                {
                    if (item.column == "first")
                    {
                        <div class="mb-3">
                            <a href="/news/read/@item.Id">
                                <img class="loader" height="220" width="100%" src="~/Public/images/imgload.gif" data-src="/Public/images/news/newspictures/@item.titleImage" />
                                <h6 style="color:white;" class="text-center pb-1 pt-3">@item.titleContent</h6>
                                <div style="color:#4effd2" class="d-flex justify-content-between p-1">
                                    <div class="newshover" href="#">Daha Ətraflı <i class="fas fa-chevron-right pl-1"></i></div>
                                    <div>@Convert.ToDateTime(item.publishdate).ToString("dd MMM yyyy")</div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="col-md-4 col-xs-12 px-3 second">
                @foreach (var item in Model.news)
                {
                    if (item.column == "second")
                    {
                        <div class="mb-3">
                            <a href="/news/read/@item.Id">
                                <img class="loader" height="260" width="100%" src="~/Public/images/imgload.gif" data-src="/Public/images/news/newspictures/@item.titleImage" />
                                <h6 style="color:white;" class="text-center pb-1 pt-3">@item.titleContent</h6>
                                <div style="color:#4effd2" class="d-flex justify-content-between p-1">
                                    <div class="newshover" href="#">Daha Ətraflı <i class="fas fa-chevron-right pl-1"></i></div>
                                    <div>@Convert.ToDateTime(item.publishdate).ToString("dd MMM yyyy")</div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="col-md-4 col-xs-12 px-0 third">
                @foreach (var item in Model.news)
                {
                    if (item.column == "third")
                    {
                        <div class="mb-3">
                            <a href="/news/read/@item.Id">
                                <img class="loader" height="180" width="100%" src="~/Public/images/imgload.gif" data-src="/Public/images/news/newspictures/@item.titleImage" />
                                <h6 style="color:white;" class="text-center pb-1 pt-3">@item.titleContent</h6>
                                <div style="color:#4effd2" class="d-flex justify-content-between p-1">
                                    <div class="newshover" href="#">Daha Ətraflı <i class="fas fa-chevron-right pl-1"></i></div>
                                    <div>@Convert.ToDateTime(item.publishdate).ToString("dd MMM yyyy")</div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            </div>
</div>
