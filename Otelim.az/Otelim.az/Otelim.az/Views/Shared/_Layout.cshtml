                <div class="col-lg-3 col-md-6 col-sm-12 mt-4">
                    <ul class="pb-1">
                        <li class="ml-5">
                            <a target="_blank" href="@Model.information.facebook"><i class="fab fa-facebook fa-2x mr-3"></i></a>
                            <a target="_blank" href="@Model.information.instagram"><i class="fab fa-instagram fa-2x"></i></a>
                        </li>
                        <li>
